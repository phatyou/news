<!-- Modal Structure -->

  <div class="modal" id="modal1">
   <form action="" method="POST" class="col s12">
    <h5>Comment on this Article:</h5>
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">perm_identity</i>
          <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
        </div>
      </div>
      <div class="row">   
        <div class="input-field col s6">
          <i class="material-icons prefix">comment</i>
          <input id="icon_telephone" type="text" placeholder="Comment" name="comment" class="validate active">
        </div>
      </div>
       <!-- Submit Button -->
      <div class="row center-align">
        <div class="input-field center-align">
        <input class="waves-effect waves-light btn yellow lighten-2" id="btnSignUp" type="submit" value="Submit">
        </div>
      </div>
    </form>
  </div>
