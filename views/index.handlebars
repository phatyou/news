<div>
    <h1 class="card z-depth-3 center-align">Weird and Interesting: <hr> News from Oddee</h1>
    <div class="row">
      <div class="col s3"></div>
      <h5 class="card z-depth-5 center-align col s6">Featuring the crazy, strange and bizarre.</h5>
    </div>
</div>

<div class="row">
  <div class="col s2"></div>
  <div class ="col s8 left-align">
    {{#each article}}
      <div class="card-panel">
        <h4>{{this.title}}</h4>
        {{!-- goes to article.handlebars --}}
        <a href = {{this.link}} class="waves-effect waves-light btn yellow lighten-2" id="btnSignUp">Read Article</a>
        <a class="waves-effect waves-light btn yellow lighten-2" id="btnSignUp" onclick="$('#modal1').modal('open');"><i class="material-icons right">feedback</i>Comment</a>
      </div>
    {{/each}}
  </div>
</div>

